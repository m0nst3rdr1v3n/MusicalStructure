<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructure.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:iconifiedByDefault="false"
            android:queryHint="@string/search_music" />

        <TextView
            android:id="@+id/genre_alternative"
            style="@style/GenreStyle"
            android:background="@color/genre_alternative"
            android:text="Alternative" />


        <TextView
            android:id="@+id/genre_blues"
            style="@style/GenreStyle"
            android:background="@color/genre_blues"
            android:text="Blues" />

        <TextView
            android:id="@+id/country_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_country"
            android:text="Country" />

        <TextView
            android:id="@+id/hiphop_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_hiphop"
            android:text="Hip Hop/Rap" />

        <TextView
            android:id="@+id/jazz_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_jazz"
            android:text="Jazz" />

        <TextView
            android:id="@+id/metal_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_metal"
            android:text="Metal" />

        <TextView
            android:id="@+id/oldies_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_oldies"
            android:text="Oldies" />

        <TextView
            android:id="@+id/pop_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_pop"
            android:text="Pop" />

        <TextView
            android:id="@+id/punk_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_punk"
            android:text="Punk" />

        <TextView
            android:id="@+id/rock_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_rock"
            android:text="Rock" />

        <TextView
            android:id="@+id/soundtracks_genre"
            style="@style/GenreStyle"
            android:background="@color/genre_soundtracks"
            android:text="Soundtracks" />





    </LinearLayout>
</ScrollView>
